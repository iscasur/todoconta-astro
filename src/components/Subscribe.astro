---
interface Props {
    title: string,
    description?: string,
    disclaimer?: string,
}

const {
    title,
    description,
    disclaimer,
} = Astro.props;
---
<div>
  <h4 class="text-lg font-bold">{title}</h4>
  <p>{description}</p>
  <form id="subscribeForm" class="mt-4 flex flex-col items-center space-y-4">
    <label for="email">
      <span class="hidden">Email</span>
      <input type="email" id="email" name="email" placeholder="Correo electrÃ³nico" required
             class="w-full max-w-md px-4 py-2 rounded-lg border focus:outline-none focus:ring-2 focus:ring-primary"/>
    </label>
    <input type="submit" value="Suscribirme" class="bg-primary text-white py-2 px-6 rounded-lg hover:bg-[#00566e]"/>
    <span id="message"></span>
  </form>
    {disclaimer && (
      <p class="text-xs">{disclaimer}</p>
    )}
</div>

<script>
    import '../scripts/subscribeSendy.ts'
</script>