---
interface Props {
    title: string;
    description: string;
    ctaText: string;
    ctaLink: string;
}

const {title, description, ctaText, ctaLink} = Astro.props
---
<div class="bg-gray-100 text-center p-6 rounded-lg">
  <h3 class="text-xl font-bold">{title}</h3>
  <p class="mt-2">{description}</p>
  <a href={ctaLink}
     class="mt-4 inline-block bg-primary dark:bg-secondary-green text-white py-2 px-4 rounded-lg hover:bg-primary-light">
      {ctaText}
  </a>
</div>