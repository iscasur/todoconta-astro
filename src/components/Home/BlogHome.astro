---
import {getCollection} from "astro:content";

const posts = await getCollection("posts");
const sortedPosts = posts.sort((a, b) => new Date(b.data.publishedDate).getTime() - new Date(a.data.publishedDate).getTime()).slice(0, 3);
---
<section class="text-center py-12">
  <h2 class="text-2xl font-bold mb-6">Últimos Artículos del Blog</h2>
  <div class="grid gap-4 md:grid-cols-3">
      {
          sortedPosts.map((item) => (
            <a href={item.slug} class="block bg-white shadow-md rounded-lg p-4 hover:bg-gray-100">{item.data.title}</a>
          ))
      }
  </div>
</section>